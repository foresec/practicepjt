// pjt 컴파일 시 필요한 루트파일과 컴파일러 옵션을 지정
{
  // ts가 여기에 포함된 모든 파일 확인
  "include": ["src"],
  "compilerOptions": {
    // 컴파일된 js파일이 생성될 디렉터리 지정
    "outDir": "build",
    // 어떤 버전의 js로 컴파일할지
    "target": "ES6",
    // js코드가 어디에서 동작할지 알려줌, 자동완성 기능 제공
    // 즉, 어떤 API를 사용하고, 어떤 환경에서 코드 실행하는지 열려줌
    "lib": ["ES6", "DOM"], // ES6 지원환경, 브라우저 환경
		"strict": true,
		"allowJs": true
	}
}
